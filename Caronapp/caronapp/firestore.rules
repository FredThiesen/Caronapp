rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: read for auth users; write only for the same user
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // avoid deletions from client
    }

    // Trips: public read; create/update/delete only by driver
    match /trips/{tripId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.driverId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.driverId == request.auth.uid;

      // Requests under a trip
      match /requests/{requestId} {
        // create a request if authenticated and riderId == auth.uid and status == 'pending'
        allow create: if request.auth != null
          && request.resource.data.riderId == request.auth.uid
          && request.resource.data.status == 'pending'
          && request.resource.data.riderId != resource.data.driverId;

        // read requests allowed to authenticated users (driver or rider)
        allow read: if request.auth != null;

        // update: only driver can accept/reject (change status), or rider can cancel own request
        allow update: if request.auth != null && (
          // driver updates status
          request.auth.uid == get(/databases/$(database)/documents/trips/$(tripId)).data.driverId
          || (
            // rider can update their own request to cancel
            request.auth.uid == resource.data.riderId
          )
        );

        allow delete: if false;
      }
    }
  }
}
